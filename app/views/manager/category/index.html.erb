<div class="row">
  <div class="col-md-12" style="padding-right: 20px; padding-left: 20px">
    <%= link_to new_manager_category_path, remote: true do %>
      <%= button_tag "Create new Category", class: "btn btn-primary", style: "margin: 10px 0" %>
    <% end %>
    <table id="category-table" class="table table-striped table-bordered" style="width:100%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th style="text-align: center !important;">Edit</th>
          <th style="text-align: center !important;">Delete</th>
        </tr>
      </thead>
      <tbody id="category-item">
        <%= render "manager/category/item", categories: @categories %>
      </tbody>
      <tfoot>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Updated at</th>
          <th>Created at</th>
          <th style="text-align: center !important;">Edit</th>
          <th style="text-align: center !important;">Delete</th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
