<div class="modal fade bd-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4><b>Add New Product</b></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
      </div>
      <div class="modal-body">
        <%= form_for [:manager, product], remote: true, authenticity_token: true,:html => {:multipart => true} do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control", id: "form-control-color" %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field  :price, class: "form-control", min: 1, id: "form-control-color" %>
          </div>
          <div class="form-group">
            <%= f.label :sale_price %>
            <%= f.number_field :sale_price, class: "form-control", min: 1, id: "form-control-color" %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <br>
            <%= f.select :category_ids, options_for_select(product_categories),{} ,class: "form-control", id: "form-control-color" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", id: "form-control-description" %>
          </div>
          <div class="form-group">
            <%= f.file_field :image %>
          </div>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
