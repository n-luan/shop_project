<div class="container">
  <div class="container-fluid" style="padding: 30px">
    <div class="row">
      <div class="col-md-4 order-md-2 mb-4">
        <h2 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Your cart</span>
          <span class="badge badge-secondary badge-pill"><%= current_order.total_quantity %></span>
        </h2>
        <ul class="list-group mb-3">
          <% current_order.product_orders.each do |product_order| %>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0"><%= product_order.product.name %></h6>
                <small class="text-muted">Quatity: <%= product_order.quantity %></small>
              </div>
              <span class="text-muted"><%= number_to_currency(product_order.product.sale_price || product_order.product.price) %></span>
            </li>
          <% end %>
          <li class="list-group-item d-flex justify-content-between" style="background-color: black; color:white">
            <span>Total (USD)</span>
            <strong>$ <%= current_order.subtotal %></strong>
          </li>
        </ul>
        <form class="card p-2">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Promo code">
            <div class="input-group-append">
              <button type="submit" class="btn btn-secondary" style="height: 100%">Redeem</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-8 order-md-1">
        <h2 class="mb-3">Billing address</h2>
        <form class="needs-validation" novalidate="">
          <div class="mb-3">
            <label for="username">Full name <span style="color: red">(*)</span></label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i>
</span>
              </div>
              <input type="text" class="form-control" id="username" placeholder="Full name" required="">
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="username">Email <span style="color: red">(*)</span></label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i>
</span>
              </div>
              <input type="text" class="form-control" id="username" placeholder="Your email" required="">
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="username">Number phone <span style="color: red">(*)</span></label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-phone-square" aria-hidden="true"></i>
</i></span>
              </div>
              <input type="text" class="form-control" id="username" placeholder="Your phone number" required="">
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="username">Address <span style="color: red">(*)</span></label>
            <div class="input-group">
              <textarea class="form-control" placeholder="Your address" style="border-radius: 4px;"></textarea>
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div>
          <button class="btn btn-secondary btn-lg btn-block" type="submit" style="height: 0%;">Continue to checkout</button>
        </form>
      </div>
    </div>
  </div>
</div>
